citHeader("To cite package 'RMINC' in publications use:")

desc <- packageDescription("RMINC")
vers <- paste("R package version", desc$Version)

citEntry(entry="Manual",
		title = "Package RMINC: Voxel-Wise Morphometry using RMINC",
		author = personList(as.person("Jason Lerch"), as.person("Jim Nikelski"), as.person("the RMINC team")),
		year = 2009,
		note = vers,
		organization = "McGill University",
		address = "Montreal, Quebec, Canada",
		textVersion = paste("Jason Lerch, Jim Nikelski, and the RMINC team (2009). Package RMINC: Voxel-Wise Morphometry using RMINC. ",
		                     vers, ". ",
		                    "McGill University, Montreal, Quebec, Canada.", sep="")
)
